@{
  Layout = "_Layout";
}

<h1>All Engineers</h1> 

@using System.Collections.Generic;
@using Factory.Models;

@model List<Factory.Models.Engineer>

@if (@Model.Count == 0)
{
  <h3>You have not hired any engineers yet.</h3>
} 

<ul>
  @foreach (Engineer engineer in Model)
  {
      <li>@Html.ActionLink(engineer.EngineerName, "Details", new {id = engineer.EngineerId})</li>
  }   
</ul>

<p>@Html.ActionLink("Add an engineer", "Create", "Engineer")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>