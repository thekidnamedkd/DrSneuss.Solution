@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Machine Name: @Model.MachineName</h3>
<h3>Machine Product: @Model.MachineProduct</h3>

<h3>Engineers Enrolled:</h3>
<ul>
  @if(Model.Engineers.Count == 0)
  {
    <li>No Engineers are currently enrolled</li>
  } else
  {
    @foreach (var join in Model.Engineers)
    {
      <li>@Html.ActionLink(join.Engineer.EngineerName, "Details", "Engineer", new { id = join.Engineer.EngineerId })</li>
    }
  }
</ul>


<p>@Html.ActionLink("All Machines", "Index")</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId})</p>
<p>@Html.ActionLink("Delete Machine", "Delete",  new { id = Model.MachineId})</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>