@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@using Factory.Models;

@model List<Factory.Models.Machine>

<h2>Current Machines:</h2>
@if (@Model.Count == 0)
{
  <h3>No machines exist yet.</h3>
} 

<ul>
  @foreach (Machine machine in Model)
  {
      <li>@Html.ActionLink(machine.MachineName, "Details", new {id = machine.MachineId})</li>
  }   
</ul>

<p>@Html.ActionLink("Add Machine", "Create", "Machine")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>