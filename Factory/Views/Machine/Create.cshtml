@{
  Layout = "_Layout";
}

<h2>Add a new machine</h2>

@model Factory.Models.Machine

@using (Html.BeginForm())
{
  @Html.Label("Machine Name: ")
  @Html.TextBoxFor(model => model.MachineName, new { type = "text", required="required" })
  <hr />
  @Html.Label("Machine Product: ")
  @Html.TextBoxFor(model => model.MachineProduct,  new { type = "text", required="required" })
  <hr />
  
  <input type="submit" value="Add Machine" class="btn btn-default"/>
}

<p>@Html.ActionLink("Return Home", "Index", "Home")</p>